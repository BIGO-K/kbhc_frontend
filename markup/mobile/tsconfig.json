{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"composite": true,
		"lib": [
			"ES2020",
			"DOM",
			"DOM.Iterable"
		],
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"$/*": ["../*"],
		},
		"allowJs": true,
	},
	"include": [
		"src/**/*",
		"src/**/*.vue",
		"../@types/**/*",
		"../composables/**/*",
		"../constants/**/*",
		"../errors/**/*",
		"../stores/**/*",
		"../utils/**/*",
		// "../env.d.ts",
		"vite.config.js"
	],
	"exclude": [
		"node_modules",
		"dist",
		"build",
		"src/**/__tests__/*"
	],
}